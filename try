    <div class="video-player paused" id="videoPlayer">
        <!-- عنوان الفيديو (اختياري) -->
        <div class="video-title">مبادئ المحاسبة - المحاضرة الأولى</div>
        
        <!-- عنصر الفيديو -->
        <video id="video" src="https://archive.org/download/20250916_20250916_0112/%D9%84%D8%BA%D8%A9_%D8%A7%D9%84%D8%A3%D8%B9%D9%85%D8%A7%D9%84__%D9%85%D9%82%D8%AF%D9%85%D8%A9_%D9%84%D9%84%D9%85%D8%AD%D8%A7%D8%B3%D8%A8%D8%A9.mp4"></video>

        <!-- شريط التحكم -->
        <div class="controls-overlay">
            <!-- شريط التقدم -->
            <div class="progress-container" id="progressContainer">
                <div class="progress-bar" id="progressBar">
                    <div class="progress-thumb"></div>
                </div>
            </div>

            <!-- أزرار التحكم -->
            <div class="controls">
                <!-- التحكم الرئيسي -->
                <div class="main-controls">
                    <!-- السابق -->
                    <button class="control-btn" id="prevBtn">
                        <svg viewBox="0 0 24 24">
                            <path d="M6 6h2v12H6zm3.5 6l8.5 6V6z"/>
                        </svg>
                    </button>

                    <!-- تشغيل/إيقاف -->
                    <button class="control-btn play-btn" id="playBtn">
                        <svg class="play-icon" viewBox="0 0 24 24">
                            <path d="M8 5v14l11-7z"/>
                        </svg>
                        <svg class="pause-icon" viewBox="0 0 24 24" style="display: none;">
                            <path d="M6 19h4V5H6v14zm8-14v14h4V5h-4z"/>
                        </svg>
                    </button>

                    <!-- التالي -->
                    <button class="control-btn" id="nextBtn">
                        <svg viewBox="0 0 24 24">
                            <path d="M6 18l8.5-6L6 6v12zM16 6v12h2V6h-2z"/>
                        </svg>
                    </button>

                    <!-- التوقيت -->
                    <div class="time-info">
                        <span id="currentTime">0:00</span> / <span id="duration">0:00</span>
                    </div>
                </div>

                <!-- التحكم الثانوي -->
                <div class="secondary-controls">
                    <!-- الصوت -->
                    <div class="volume-container">
