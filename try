            if (video.buffered.length > 0) {
                const bufferedEnd = video.buffered.end(video.buffered.length - 1);
                const bufferedPercentage = (bufferedEnd / video.duration) * 100;
                buffer.style.width = bufferedPercentage + '%';
            }
        });

