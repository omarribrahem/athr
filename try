    <div class="video-container">
        <!-- معلومات الفيديو -->
        <div class="video-info">
            <div class="video-title">مبادئ المحاسبة - المحاضرة الأولى</div>
            <div class="video-subtitle">الخلاصة التنفيذية والمفاهيم الأساسية</div>
        </div>

        <!-- عنصر الفيديو -->
        <video id="main-video" src="https://archive.org/download/20250916_20250916_0112/%D9%84%D8%BA%D8%A9_%D8%A7%D9%84%D8%A3%D8%B9%D9%85%D8%A7%D9%84__%D9%85%D9%82%D8%AF%D9%85%D8%A9_%D9%84%D9%84%D9%85%D8%AD%D8%A7%D8%B3%D8%A8%D8%A9.mp4"></video>

        <!-- شريط التحكم -->
        <div class="controls-overlay">
            <div class="controls-bar">
                <!-- زر التشغيل الرئيسي -->
                <button class="control-button main-play-button" id="playPause">
                    <svg class="control-icon play-icon" viewBox="0 0 24 24">
                        <path d="M8 5v14l11-7z"/>
                    </svg>
                    <svg class="control-icon pause-icon" viewBox="0 0 24 24" style="display: none;">
                        <path d="M6 19h4V5H6v14zm8-14v14h4V5h-4z"/>
                    </svg>
                </button>

                <!-- التوقيت -->
                <div class="time-display" id="timeDisplay">00:00 / 00:00</div>

                <!-- شريط التقدم -->
                <div class="progress-container" id="progressContainer">
                    <div class="progress-bar" id="progressBar"></div>
                    <div class="progress-thumb"></div>
                </div>

                <!-- أزرار ثانوية -->
                <div class="secondary-controls">
                    <!-- زر الصوت -->
                    <button class="control-button" id="muteBtn">
                        <svg class="control-icon volume-icon" viewBox="0 0 24 24">
                            <path d="M3 9v6h4l5 5V4L7 9H3zm13.5 3A4.5 4.5 0 0016 7.97v8.05c1.48-.73 2.5-2.25 2.5-4.02zM14 3.23v2.06c2.89.86 5 3.54 5 6.71s-2.11 5.85-5 6.71v2.06c4.01-.91 7-4.49 7-8.77s-2.99-7.86-7-8.77z"/>
                        </svg>
                        <svg class="control-icon mute-icon" viewBox="0 0 24 24" style="display: none;">
                            <path d="M16.5 12A4.5 4.5 0 0014 7.97v2.21l2.45 2.45c.03-.2.05-.41.05-.63zm2.5 0c0 .94-.2 1.82-.54 2.64l1.51 1.51A8.796 8.796 0 0021 12c0-4.28-2.99-7.86-7-8.77v2.06c2.89.86 5 3.54 5 6.71zM4.27 3L3 4.27 7.73 9H3v6h4l5 5v-6.73l4.25 4.25c-.67.52-1.42.93-2.25 1.18v2.06c1.38-.31 2.63-.95 3.69-1.81L19.73 21 21 19.73l-9-9L4.27 3zM12 4L9.91 6.09 12 8.18V4z"/>
                        </svg>
                    </button>

                    <!-- زر الشاشة الكاملة -->
                    <button class="control-button" id="fullscreenBtn">
                        <svg class="control-icon fullscreen-icon" viewBox="0 0 24 24">
                            <path d="M7 14H5v5h5v-2H7v-3zm-2-4h2V7h3V5H5v5zm12 7h-3v2h5v-5h-2v3zM14 5v2h3v3h2V5h-5z"/>
