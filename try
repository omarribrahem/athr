            { time: 120, title: "Ø§Ù„ØªØ¹Ø±ÙŠÙØ§Øª" },
            { time: 300, title: "Ø§Ù„Ø£Ù…Ø«Ù„Ø© Ø§Ù„Ø¹Ù…Ù„ÙŠØ©" },
            { time: 480, title: "Ø§Ù„Ø®Ù„Ø§ØµØ©" }
